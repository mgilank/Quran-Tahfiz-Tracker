{"surahNumber":77,"ayahs":[{"number":1,"text":"وَٱلۡمُرۡسَلَٰتِ عُرۡفٗا"},{"number":2,"text":"فَٱلۡعَٰصِفَٰتِ عَصۡفٗا"},{"number":3,"text":"وَٱلنَّـٰشِرَٰتِ نَشۡرٗا"},{"number":4,"text":"فَٱلۡفَٰرِقَٰتِ فَرۡقٗا"},{"number":5,"text":"فَٱلۡمُلۡقِيَٰتِ ذِكۡرًا"},{"number":6,"text":"عُذۡرًا أَوۡ نُذۡرًا"},{"number":7,"text":"إِنَّمَا تُوعَدُونَ لَوَٰقِعٞ"},{"number":8,"text":"فَإِذَا ٱلنُّجُومُ طُمِسَتۡ"},{"number":9,"text":"وَإِذَا ٱلسَّمَآءُ فُرِجَتۡ"},{"number":10,"text":"وَإِذَا ٱلۡجِبَالُ نُسِفَتۡ"},{"number":11,"text":"وَإِذَا ٱلرُّسُلُ أُقِّتَتۡ"},{"number":12,"text":"لِأَيِّ يَوۡمٍ أُجِّلَتۡ"},{"number":13,"text":"لِيَوۡمِ ٱلۡفَصۡلِ"},{"number":14,"text":"وَمَآ أَدۡرَىٰكَ مَا يَوۡمُ ٱلۡفَصۡلِ"},{"number":15,"text":"وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ"},{"number":16,"text":"أَلَمۡ نُهۡلِكِ ٱلۡأَوَّلِينَ"},{"number":17,"text":"ثُمَّ نُتۡبِعُهُمُ ٱلۡأٓخِرِينَ"},{"number":18,"text":"كَذَٰلِكَ نَفۡعَلُ بِٱلۡمُجۡرِمِينَ"},{"number":19,"text":"وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ"},{"number":20,"text":"أَلَمۡ نَخۡلُقكُّم مِّن مَّآءٖ مَّهِينٖ"},{"number":21,"text":"فَجَعَلۡنَٰهُ فِي قَرَارٖ مَّكِينٍ"},{"number":22,"text":"إِلَىٰ قَدَرٖ مَّعۡلُومٖ"},{"number":23,"text":"فَقَدَرۡنَا فَنِعۡمَ ٱلۡقَٰدِرُونَ"},{"number":24,"text":"وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ"},{"number":25,"text":"أَلَمۡ نَجۡعَلِ ٱلۡأَرۡضَ كِفَاتًا"},{"number":26,"text":"أَحۡيَآءٗ وَأَمۡوَٰتٗا"},{"number":27,"text":"وَجَعَلۡنَا فِيهَا رَوَٰسِيَ شَٰمِخَٰتٖ وَأَسۡقَيۡنَٰكُم مَّآءٗ فُرَاتٗا"},{"number":28,"text":"وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ"},{"number":29,"text":"ٱنطَلِقُوٓاْ إِلَىٰ مَا كُنتُم بِهِۦ تُكَذِّبُونَ"},{"number":30,"text":"ٱنطَلِقُوٓاْ إِلَىٰ ظِلّٖ ذِي ثَلَٰثِ شُعَبٖ"},{"number":31,"text":"لَّا ظَلِيلٖ وَلَا يُغۡنِي مِنَ ٱللَّهَبِ"},{"number":32,"text":"إِنَّهَا تَرۡمِي بِشَرَرٖ كَٱلۡقَصۡرِ"},{"number":33,"text":"كَأَنَّهُۥ جِمَٰلَتٞ صُفۡرٞ"},{"number":34,"text":"وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ"},{"number":35,"text":"هَٰذَا يَوۡمُ لَا يَنطِقُونَ"},{"number":36,"text":"وَلَا يُؤۡذَنُ لَهُمۡ فَيَعۡتَذِرُونَ"},{"number":37,"text":"وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ"},{"number":38,"text":"هَٰذَا يَوۡمُ ٱلۡفَصۡلِۖ جَمَعۡنَٰكُمۡ وَٱلۡأَوَّلِينَ"},{"number":39,"text":"فَإِن كَانَ لَكُمۡ كَيۡدٞ فَكِيدُونِ"},{"number":40,"text":"وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ"},{"number":41,"text":"إِنَّ ٱلۡمُتَّقِينَ فِي ظِلَٰلٖ وَعُيُونٖ"},{"number":42,"text":"وَفَوَٰكِهَ مِمَّا يَشۡتَهُونَ"},{"number":43,"text":"كُلُواْ وَٱشۡرَبُواْ هَنِيٓـَٔۢا بِمَا كُنتُمۡ تَعۡمَلُونَ"},{"number":44,"text":"إِنَّا كَذَٰلِكَ نَجۡزِي ٱلۡمُحۡسِنِينَ"},{"number":45,"text":"وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ"},{"number":46,"text":"كُلُواْ وَتَمَتَّعُواْ قَلِيلًا إِنَّكُم مُّجۡرِمُونَ"},{"number":47,"text":"وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ"},{"number":48,"text":"وَإِذَا قِيلَ لَهُمُ ٱرۡكَعُواْ لَا يَرۡكَعُونَ"},{"number":49,"text":"وَيۡلٞ يَوۡمَئِذٖ لِّلۡمُكَذِّبِينَ"},{"number":50,"text":"فَبِأَيِّ حَدِيثِۭ بَعۡدَهُۥ يُؤۡمِنُونَ"}]}