{"surahNumber":81,"ayahs":[{"number":1,"text":"إِذَا ٱلشَّمۡسُ كُوِّرَتۡ"},{"number":2,"text":"وَإِذَا ٱلنُّجُومُ ٱنكَدَرَتۡ"},{"number":3,"text":"وَإِذَا ٱلۡجِبَالُ سُيِّرَتۡ"},{"number":4,"text":"وَإِذَا ٱلۡعِشَارُ عُطِّلَتۡ"},{"number":5,"text":"وَإِذَا ٱلۡوُحُوشُ حُشِرَتۡ"},{"number":6,"text":"وَإِذَا ٱلۡبِحَارُ سُجِّرَتۡ"},{"number":7,"text":"وَإِذَا ٱلنُّفُوسُ زُوِّجَتۡ"},{"number":8,"text":"وَإِذَا ٱلۡمَوۡءُۥدَةُ سُئِلَتۡ"},{"number":9,"text":"بِأَيِّ ذَنۢبٖ قُتِلَتۡ"},{"number":10,"text":"وَإِذَا ٱلصُّحُفُ نُشِرَتۡ"},{"number":11,"text":"وَإِذَا ٱلسَّمَآءُ كُشِطَتۡ"},{"number":12,"text":"وَإِذَا ٱلۡجَحِيمُ سُعِّرَتۡ"},{"number":13,"text":"وَإِذَا ٱلۡجَنَّةُ أُزۡلِفَتۡ"},{"number":14,"text":"عَلِمَتۡ نَفۡسٞ مَّآ أَحۡضَرَتۡ"},{"number":15,"text":"فَلَآ أُقۡسِمُ بِٱلۡخُنَّسِ"},{"number":16,"text":"ٱلۡجَوَارِ ٱلۡكُنَّسِ"},{"number":17,"text":"وَٱلَّيۡلِ إِذَا عَسۡعَسَ"},{"number":18,"text":"وَٱلصُّبۡحِ إِذَا تَنَفَّسَ"},{"number":19,"text":"إِنَّهُۥ لَقَوۡلُ رَسُولٖ كَرِيمٖ"},{"number":20,"text":"ذِي قُوَّةٍ عِندَ ذِي ٱلۡعَرۡشِ مَكِينٖ"},{"number":21,"text":"مُّطَاعٖ ثَمَّ أَمِينٖ"},{"number":22,"text":"وَمَا صَاحِبُكُم بِمَجۡنُونٖ"},{"number":23,"text":"وَلَقَدۡ رَءَاهُ بِٱلۡأُفُقِ ٱلۡمُبِينِ"},{"number":24,"text":"وَمَا هُوَ عَلَى ٱلۡغَيۡبِ بِضَنِينٖ"},{"number":25,"text":"وَمَا هُوَ بِقَوۡلِ شَيۡطَٰنٖ رَّجِيمٖ"},{"number":26,"text":"فَأَيۡنَ تَذۡهَبُونَ"},{"number":27,"text":"إِنۡ هُوَ إِلَّا ذِكۡرٞ لِّلۡعَٰلَمِينَ"},{"number":28,"text":"لِمَن شَآءَ مِنكُمۡ أَن يَسۡتَقِيمَ"},{"number":29,"text":"وَمَا تَشَآءُونَ إِلَّآ أَن يَشَآءَ ٱللَّهُ رَبُّ ٱلۡعَٰلَمِينَ"}]}