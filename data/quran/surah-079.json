{"surahNumber":79,"ayahs":[{"number":1,"text":"وَٱلنَّـٰزِعَٰتِ غَرۡقٗا"},{"number":2,"text":"وَٱلنَّـٰشِطَٰتِ نَشۡطٗا"},{"number":3,"text":"وَٱلسَّـٰبِحَٰتِ سَبۡحٗا"},{"number":4,"text":"فَٱلسَّـٰبِقَٰتِ سَبۡقٗا"},{"number":5,"text":"فَٱلۡمُدَبِّرَٰتِ أَمۡرٗا"},{"number":6,"text":"يَوۡمَ تَرۡجُفُ ٱلرَّاجِفَةُ"},{"number":7,"text":"تَتۡبَعُهَا ٱلرَّادِفَةُ"},{"number":8,"text":"قُلُوبٞ يَوۡمَئِذٖ وَاجِفَةٌ"},{"number":9,"text":"أَبۡصَٰرُهَا خَٰشِعَةٞ"},{"number":10,"text":"يَقُولُونَ أَءِنَّا لَمَرۡدُودُونَ فِي ٱلۡحَافِرَةِ"},{"number":11,"text":"أَءِذَا كُنَّا عِظَٰمٗا نَّخِرَةٗ"},{"number":12,"text":"قَالُواْ تِلۡكَ إِذٗا كَرَّةٌ خَاسِرَةٞ"},{"number":13,"text":"فَإِنَّمَا هِيَ زَجۡرَةٞ وَٰحِدَةٞ"},{"number":14,"text":"فَإِذَا هُم بِٱلسَّاهِرَةِ"},{"number":15,"text":"هَلۡ أَتَىٰكَ حَدِيثُ مُوسَىٰٓ"},{"number":16,"text":"إِذۡ نَادَىٰهُ رَبُّهُۥ بِٱلۡوَادِ ٱلۡمُقَدَّسِ طُوًى"},{"number":17,"text":"ٱذۡهَبۡ إِلَىٰ فِرۡعَوۡنَ إِنَّهُۥ طَغَىٰ"},{"number":18,"text":"فَقُلۡ هَل لَّكَ إِلَىٰٓ أَن تَزَكَّىٰ"},{"number":19,"text":"وَأَهۡدِيَكَ إِلَىٰ رَبِّكَ فَتَخۡشَىٰ"},{"number":20,"text":"فَأَرَىٰهُ ٱلۡأٓيَةَ ٱلۡكُبۡرَىٰ"},{"number":21,"text":"فَكَذَّبَ وَعَصَىٰ"},{"number":22,"text":"ثُمَّ أَدۡبَرَ يَسۡعَىٰ"},{"number":23,"text":"فَحَشَرَ فَنَادَىٰ"},{"number":24,"text":"فَقَالَ أَنَا۠ رَبُّكُمُ ٱلۡأَعۡلَىٰ"},{"number":25,"text":"فَأَخَذَهُ ٱللَّهُ نَكَالَ ٱلۡأٓخِرَةِ وَٱلۡأُولَىٰٓ"},{"number":26,"text":"إِنَّ فِي ذَٰلِكَ لَعِبۡرَةٗ لِّمَن يَخۡشَىٰٓ"},{"number":27,"text":"ءَأَنتُمۡ أَشَدُّ خَلۡقًا أَمِ ٱلسَّمَآءُۚ بَنَىٰهَا"},{"number":28,"text":"رَفَعَ سَمۡكَهَا فَسَوَّىٰهَا"},{"number":29,"text":"وَأَغۡطَشَ لَيۡلَهَا وَأَخۡرَجَ ضُحَىٰهَا"},{"number":30,"text":"وَٱلۡأَرۡضَ بَعۡدَ ذَٰلِكَ دَحَىٰهَآ"},{"number":31,"text":"أَخۡرَجَ مِنۡهَا مَآءَهَا وَمَرۡعَىٰهَا"},{"number":32,"text":"وَٱلۡجِبَالَ أَرۡسَىٰهَا"},{"number":33,"text":"مَتَٰعٗا لَّكُمۡ وَلِأَنۡعَٰمِكُمۡ"},{"number":34,"text":"فَإِذَا جَآءَتِ ٱلطَّآمَّةُ ٱلۡكُبۡرَىٰ"},{"number":35,"text":"يَوۡمَ يَتَذَكَّرُ ٱلۡإِنسَٰنُ مَا سَعَىٰ"},{"number":36,"text":"وَبُرِّزَتِ ٱلۡجَحِيمُ لِمَن يَرَىٰ"},{"number":37,"text":"فَأَمَّا مَن طَغَىٰ"},{"number":38,"text":"وَءَاثَرَ ٱلۡحَيَوٰةَ ٱلدُّنۡيَا"},{"number":39,"text":"فَإِنَّ ٱلۡجَحِيمَ هِيَ ٱلۡمَأۡوَىٰ"},{"number":40,"text":"وَأَمَّا مَنۡ خَافَ مَقَامَ رَبِّهِۦ وَنَهَى ٱلنَّفۡسَ عَنِ ٱلۡهَوَىٰ"},{"number":41,"text":"فَإِنَّ ٱلۡجَنَّةَ هِيَ ٱلۡمَأۡوَىٰ"},{"number":42,"text":"يَسۡـَٔلُونَكَ عَنِ ٱلسَّاعَةِ أَيَّانَ مُرۡسَىٰهَا"},{"number":43,"text":"فِيمَ أَنتَ مِن ذِكۡرَىٰهَآ"},{"number":44,"text":"إِلَىٰ رَبِّكَ مُنتَهَىٰهَآ"},{"number":45,"text":"إِنَّمَآ أَنتَ مُنذِرُ مَن يَخۡشَىٰهَا"},{"number":46,"text":"كَأَنَّهُمۡ يَوۡمَ يَرَوۡنَهَا لَمۡ يَلۡبَثُوٓاْ إِلَّا عَشِيَّةً أَوۡ ضُحَىٰهَا"}]}